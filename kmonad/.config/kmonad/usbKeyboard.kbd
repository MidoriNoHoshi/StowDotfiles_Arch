(defcfg
  input (device-file "/dev/input/by-id/usb-HOLTEK_USB-HID_Keyboard_AP0000000003-event-kbd")
  output (uinput-sink "Kmonad output")
  fallthrough true
  allow-cmd false
)

(defsrc
  esc
  grv
  tab
  caps
  lsft
  wkup lctl lmet lalt
)

(deflayer main
  _
  _
  lctrl
  lmet
  _
  _    tab    esc    _
)

